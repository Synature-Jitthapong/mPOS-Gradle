<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <solid 
                android:color="@color/light_gray"/>
            <strok
                android:width="1px"
                android:color="@color/gray"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"></padding>
            <corners 
                android:radius="2dp"/>
        </shape>
    </item>

</layer-list>
